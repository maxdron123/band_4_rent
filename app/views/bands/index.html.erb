<h1>All Bands</h1>

<div class="container">
  <div class="row row-cols-2">
    <% @bands.each do |band| %>
    <div class="col">
      <div class="card" style=" width: 30rem; height: 28rem;">
        <% if band.photos.attached? %>
          <%= cl_image_tag (band.photos[0].key), class:"h-50" %>
        <% else %>
          <img class="h-50" src="https://res.cloudinary.com/dwouepnpu/image/upload/v1685985732/band_4_rent/empty_ey7qq4.jpg">
        <% end %>
        <div class="card-body d-flex flex-column">
          <h5 class="card-title text-center border-bottom border-1 border-warning-subtle"><%= band.name %></h5>
          <p class="card-text text-center"><%= band.description %></p>
          <span class="position-absolute bottom-0 start-0">Rate Fee: $<%= band.rate_fee %></span>
          <div class="position-absolute bottom-0 end-0">
            <%= link_to "View details", band_path(band), class:"btn btn-dark" %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
