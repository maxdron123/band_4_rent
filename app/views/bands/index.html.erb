<h1>All Bands</h1>

<% @bands.each do |band| %>
  <div class="band-container">
    <h2><%= band.name %></h2>
    <p>Genre: <%= band.genre %></p>
    <p>Members Count: <%= band.members_count %></p>
    <p>Description: <%= band.description %></p>
    <p>Rate Fee: <%= band.rate_fee %></p>
    <p>User: <%= band.user.email %></p>
    <p><%= link_to 'View Details', band_path(band), class:'btn btn-primary' %></p>
  </div>
<% end %>

<%= link_to "New Band", new_band_path, class "btn btn-primary" %>
